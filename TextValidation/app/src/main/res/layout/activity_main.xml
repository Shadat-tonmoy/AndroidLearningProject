<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="shadattonmoy.textvalidation.MainActivity">


    <TextView
        android:text="Input Value : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_margin="15dp"
        android:id="@+id/inputValue" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_margin="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/inputValue"
        android:hint="Enter Something"
        android:textColorHint="#95a5a6"
        android:maxLines="2"

        android:textColor="#000000"
        android:ems="10"
        android:id="@+id/editText" />

    <TextView
        android:text="Message Goes Here"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="#27ae60"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textAlignment="center"
        android:id="@+id/textView2" />

    <CheckBox
        android:text="MOD 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@id/editText"
        android:layout_margin="5dp"
        android:id="@+id/checkBox" />

    <CheckBox
        android:text="MOD 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_toRightOf="@id/checkBox"
        android:layout_below="@id/editText"
        android:layout_margin="5dp"
        android:id="@+id/checkBox2" />

    <CheckBox
        android:text="MOD 5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_toRightOf="@id/checkBox2"
        android:layout_below="@id/editText"
        android:layout_margin="5dp"
        android:id="@+id/checkBox3" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBox3"
        android:layout_margin="5dp"
        android:textOn="Light"
        android:textOff="Dark"
        android:id="@+id/toggleButton" />
</RelativeLayout>
